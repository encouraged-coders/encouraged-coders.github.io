---
import Layout from '../layouts/Layout.astro';
import { Content, frontmatter } from '../content/site.md';
---

<Layout title={frontmatter.title} description={frontmatter.description}>

  {/* ─── Hero ─────────────────────────────────────────────────── */}
  <section class="bg-gradient-to-br from-slate-900 via-blue-950 to-slate-900 text-white">
    <div class="mx-auto max-w-5xl px-6 py-24 sm:py-32">
      <p class="mb-4 text-sm font-semibold uppercase tracking-widest text-blue-400">
        Software &amp; Systems Engineering
      </p>
      <h1 class="text-5xl font-extrabold tracking-tight sm:text-6xl">
        {frontmatter.title}
      </h1>
      <p class="mt-6 max-w-2xl text-xl leading-relaxed text-slate-300">
        {frontmatter.tagline}
      </p>
      <a
        href={frontmatter.linkedin}
        class="mt-10 inline-flex items-center gap-2 rounded-lg bg-blue-600 px-6 py-3 text-sm font-semibold text-white shadow-lg transition hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500"
      >
        Connect on LinkedIn
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-4 w-4" aria-hidden="true">
          <path fill-rule="evenodd" d="M3 10a.75.75 0 0 1 .75-.75h10.638L10.23 5.29a.75.75 0 1 1 1.04-1.08l5.5 5.25a.75.75 0 0 1 0 1.08l-5.5 5.25a.75.75 0 1 1-1.04-1.08l4.158-3.96H3.75A.75.75 0 0 1 3 10Z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </section>

  {/* ─── Main content from src/content/site.md ─────────────────── */}
  <main class="mx-auto max-w-4xl px-6 py-16 sm:py-20">
    <div class="prose prose-slate prose-lg max-w-none
      prose-headings:font-bold prose-headings:tracking-tight
      prose-h2:mt-12 prose-h2:text-2xl prose-h2:text-slate-900 prose-h2:border-b prose-h2:border-slate-200 prose-h2:pb-3
      prose-h3:mt-6 prose-h3:text-base prose-h3:uppercase prose-h3:tracking-wider prose-h3:text-slate-500
      prose-a:text-blue-600 hover:prose-a:text-blue-800
      prose-li:marker:text-blue-500">
      <Content />
    </div>
  </main>

</Layout>

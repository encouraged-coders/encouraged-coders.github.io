---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'enCouraged Coders',
  description = 'Coaching, training, and hands-on workshops around Software and Systems Engineeringâ€”practical, collaborative, and tailored to your context.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      *, *::before, *::after {
        box-sizing: border-box;
      }

      :root {
        --color-bg: #ffffff;
        --color-text: #1a1a2e;
        --color-accent: #2563eb;
        --color-muted: #6b7280;
        --color-border: #e5e7eb;
        --color-section-bg: #f9fafb;
        --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
          Ubuntu, Cantarell, sans-serif;
        --max-width: 820px;
      }

      body {
        margin: 0;
        padding: 0;
        font-family: var(--font-sans);
        background-color: var(--color-bg);
        color: var(--color-text);
        line-height: 1.7;
        font-size: 1rem;
      }

      main {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2rem 1.5rem 4rem;
      }

      header {
        padding: 3rem 0 2rem;
        border-bottom: 3px solid var(--color-accent);
        margin-bottom: 3rem;
      }

      h1 {
        font-size: 2.5rem;
        margin: 0 0 0.4rem;
        color: var(--color-text);
        font-weight: 700;
        letter-spacing: -0.02em;
      }

      .tagline {
        font-size: 1.2rem;
        color: var(--color-muted);
        margin: 0;
        font-weight: 400;
      }

      section {
        margin-bottom: 2.5rem;
      }

      h2 {
        font-size: 1.4rem;
        color: var(--color-text);
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 0.4rem;
        margin: 0 0 1rem;
      }

      h3 {
        font-size: 1rem;
        color: var(--color-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin: 1.5rem 0 0.5rem;
      }

      p {
        margin: 0 0 1rem;
      }

      ul {
        padding-left: 1.4rem;
        margin: 0.4rem 0;
      }

      li {
        margin-bottom: 0.35rem;
      }

      a {
        color: var(--color-accent);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .contact-box {
        background-color: var(--color-section-bg);
        border: 1px solid var(--color-border);
        border-radius: 8px;
        padding: 1.5rem 2rem;
        margin-top: 3rem;
      }

      .contact-box h2 {
        border-bottom: none;
        margin-bottom: 0.5rem;
      }

      footer {
        margin-top: 4rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--color-border);
        color: var(--color-muted);
        font-size: 0.85rem;
        text-align: center;
      }

      @media (max-width: 600px) {
        h1 {
          font-size: 1.8rem;
        }

        .tagline {
          font-size: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
      <footer>
        &copy; {new Date().getFullYear()} enCouraged Coders &middot; encouraged-coders.de
      </footer>
    </main>
  </body>
</html>

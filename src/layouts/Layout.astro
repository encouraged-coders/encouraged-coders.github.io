---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'enCouraged Coders',
  description = 'Coaching, training, and hands-on workshops around Software and Systems Engineeringâ€”practical, collaborative, and tailored to your context.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white text-slate-900 antialiased">
    <slot />
    <footer class="mt-16 border-t-4 border-myst-orange bg-myst-dark py-8 text-center text-sm text-slate-400">
      &copy; {new Date().getFullYear()} enCouraged Coders &middot; encouraged-coders.de
    </footer>
  </body>
</html>
